<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagem_produto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="17"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Titulo"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tituloLivro"
            android:text="quantidade"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/valorTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/quantidade"
            android:text="valor total"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/lista_curso_personalizada_imagem"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/trash"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tituloLivro"
            android:layout_toEndOf="@+id/quantidade"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />


    </RelativeLayout>


</LinearLayout>